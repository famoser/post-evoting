<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						 version="1.0"
						 xmlns="http://java.sun.com/xml/ns/persistence"
						 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="persistenceUnitJdbc">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>ch.post.it.evoting.votingserver.orchestrator.choicecodes.domain.model.computedvalues.ComputedValues</class>
		<class>ch.post.it.evoting.votingserver.orchestrator.mixdec.domain.model.MixDecNodeOutput</class>
		<class>ch.post.it.evoting.votingserver.orchestrator.mixdec.domain.model.MixDecBallotBoxStatus</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="false"/>
			<property name="hibernate.transaction.flush_before_completion" value="true"/>
		</properties>
	</persistence-unit>

</persistence>
